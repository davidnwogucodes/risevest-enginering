{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./build",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": [
      "./node_modules/@types", // Ensure default types are included
      "./src/@types" // Include your custom types
    ]
  },
  "include": ["src/**/*", "tests.test.ts"],
  "exclude": ["node_modules"]
}
